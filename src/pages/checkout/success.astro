---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Order Confirmed | intru" noindex={true}>
  <div class="container-custom py-32 text-center max-w-lg mx-auto">
    <svg class="w-16 h-16 mx-auto text-green-500 mb-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
    <h1 class="text-3xl font-bold tracking-tighter uppercase mb-4">Order Confirmed!</h1>
    <p class="text-gray-500 mb-8">Thank you for your purchase. You'll receive a confirmation email shortly.</p>
    <a href="/products" class="inline-block bg-black text-white px-12 py-4 text-[0.6875rem] font-black uppercase tracking-widest hover:bg-gray-800 transition-colors">
      Continue Shopping
    </a>
  </div>
</BaseLayout>
