---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Login | intru" description="Sign in to your intru account." noindex={true}>
  <div class="container-custom py-24 md:py-32 max-w-md mx-auto">
    <h1 class="text-3xl font-bold tracking-tighter uppercase mb-8 text-center">Sign In</h1>

    <div x-data="{ tab: 'login', loading: false, error: '' }">
      <!-- Tab Switch -->
      <div class="flex border-b border-gray-100 mb-8">
        <button @click="tab = 'login'" :class="tab === 'login' ? 'border-black text-black' : 'border-transparent text-gray-400'" class="flex-1 pb-3 text-[0.625rem] font-bold uppercase tracking-widest border-b-2 transition-colors cursor-pointer">Login</button>
        <button @click="tab = 'register'" :class="tab === 'register' ? 'border-black text-black' : 'border-transparent text-gray-400'" class="flex-1 pb-3 text-[0.625rem] font-bold uppercase tracking-widest border-b-2 transition-colors cursor-pointer">Register</button>
      </div>

      <!-- Error -->
      <template x-if="error">
        <div class="bg-red-50 text-red-600 text-xs font-medium p-3 rounded mb-6" x-text="error"></div>
      </template>

      <!-- Google Login -->
      <a href="/api/auth/google" class="flex items-center justify-center gap-3 w-full border border-gray-200 py-3 text-sm font-medium hover:bg-gray-50 transition-colors rounded-sm mb-6">
        <svg class="w-5 h-5" viewBox="0 0 24 24"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/></svg>
        Continue with Google
      </a>

      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-gray-100"></div></div>
        <div class="relative flex justify-center"><span class="bg-white px-4 text-[0.625rem] font-bold uppercase tracking-widest text-gray-300">or</span></div>
      </div>

      <!-- Login Form -->
      <template x-if="tab === 'login'">
        <form @submit.prevent="
          loading = true; error = '';
          fetch('/api/auth/login', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ email: $refs.loginEmail.value, password: $refs.loginPass.value }) })
          .then(r => r.json())
          .then(d => { if (d.error) { error = d.error; loading = false; } else { window.location.href = '/'; } })
          .catch(() => { error = 'Something went wrong'; loading = false; })
        ">
          <div class="space-y-4">
            <div>
              <label class="text-[0.625rem] font-bold uppercase tracking-widest text-gray-500 block mb-2">Email</label>
              <input x-ref="loginEmail" type="email" required class="w-full border border-gray-200 px-4 py-3 text-sm outline-none focus:border-black transition-colors rounded-sm" placeholder="you@example.com" />
            </div>
            <div>
              <label class="text-[0.625rem] font-bold uppercase tracking-widest text-gray-500 block mb-2">Password</label>
              <input x-ref="loginPass" type="password" required class="w-full border border-gray-200 px-4 py-3 text-sm outline-none focus:border-black transition-colors rounded-sm" placeholder="••••••••" />
            </div>
          </div>
          <button type="submit" :disabled="loading" class="w-full bg-black text-white py-4 mt-6 text-[0.6875rem] font-black uppercase tracking-widest hover:bg-gray-800 transition-colors disabled:opacity-50 cursor-pointer">
            <span x-show="!loading">Sign In</span>
            <span x-show="loading" x-cloak>Signing in...</span>
          </button>
        </form>
      </template>

      <!-- Register Form -->
      <template x-if="tab === 'register'">
        <form @submit.prevent="
          loading = true; error = '';
          fetch('/api/auth/register', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ name: $refs.regName.value, email: $refs.regEmail.value, password: $refs.regPass.value }) })
          .then(r => r.json())
          .then(d => { if (d.error) { error = d.error; loading = false; } else { window.location.href = '/'; } })
          .catch(() => { error = 'Something went wrong'; loading = false; })
        ">
          <div class="space-y-4">
            <div>
              <label class="text-[0.625rem] font-bold uppercase tracking-widest text-gray-500 block mb-2">Name</label>
              <input x-ref="regName" type="text" required class="w-full border border-gray-200 px-4 py-3 text-sm outline-none focus:border-black transition-colors rounded-sm" placeholder="Your name" />
            </div>
            <div>
              <label class="text-[0.625rem] font-bold uppercase tracking-widest text-gray-500 block mb-2">Email</label>
              <input x-ref="regEmail" type="email" required class="w-full border border-gray-200 px-4 py-3 text-sm outline-none focus:border-black transition-colors rounded-sm" placeholder="you@example.com" />
            </div>
            <div>
              <label class="text-[0.625rem] font-bold uppercase tracking-widest text-gray-500 block mb-2">Password</label>
              <input x-ref="regPass" type="password" required minlength="6" class="w-full border border-gray-200 px-4 py-3 text-sm outline-none focus:border-black transition-colors rounded-sm" placeholder="Min 6 characters" />
            </div>
          </div>
          <button type="submit" :disabled="loading" class="w-full bg-black text-white py-4 mt-6 text-[0.6875rem] font-black uppercase tracking-widest hover:bg-gray-800 transition-colors disabled:opacity-50 cursor-pointer">
            <span x-show="!loading">Create Account</span>
            <span x-show="loading" x-cloak>Creating...</span>
          </button>
        </form>
      </template>
    </div>
  </div>
</BaseLayout>
