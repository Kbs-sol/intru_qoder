---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { getAllProducts } from '@/lib/db';
import { formatPrice } from '@/lib/utils';

const db = Astro.locals.runtime.env.DB;
let products: Awaited<ReturnType<typeof getAllProducts>> = [];

try {
  products = await getAllProducts(db);
} catch {
  // DB not connected
}
---

<AdminLayout title="Products | Admin" activeTab="products">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-bold">Products</h1>
    <button
      x-data
      @click="document.getElementById('add-form').classList.toggle('hidden')"
      class="bg-black text-white px-6 py-2.5 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 transition-colors rounded cursor-pointer"
    >
      + Add Product
    </button>
  </div>

  <!-- Add Product Form -->
  <div id="add-form" class="hidden bg-white p-6 rounded-lg border border-gray-100 mb-8" x-data="{
    form: { name: '', description: '', price: '', sale_price: '', category: 'T-Shirts', image_url: '', stock_status: 'in_stock', featured: false },
    saving: false,
    async save() {
      this.saving = true;
      await fetch('/api/admin/products', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(this.form)
      });
      window.location.reload();
    }
  }">
    <h2 class="text-sm font-bold uppercase tracking-wider mb-4">New Product</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="text-xs font-medium text-gray-500 block mb-1">Name</label>
        <input x-model="form.name" type="text" required class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black" />
      </div>
      <div>
        <label class="text-xs font-medium text-gray-500 block mb-1">Category</label>
        <select x-model="form.category" class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black">
          <option>T-Shirts</option>
          <option>Shirts</option>
        </select>
      </div>
      <div>
        <label class="text-xs font-medium text-gray-500 block mb-1">Price (INR)</label>
        <input x-model="form.price" type="number" required class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black" />
      </div>
      <div>
        <label class="text-xs font-medium text-gray-500 block mb-1">Sale Price</label>
        <input x-model="form.sale_price" type="number" class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black" />
      </div>
      <div class="md:col-span-2">
        <label class="text-xs font-medium text-gray-500 block mb-1">Image URL</label>
        <input x-model="form.image_url" type="url" class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black" />
      </div>
      <div class="md:col-span-2">
        <label class="text-xs font-medium text-gray-500 block mb-1">Description</label>
        <textarea x-model="form.description" rows="3" class="w-full border border-gray-200 px-3 py-2 text-sm rounded outline-none focus:border-black resize-none"></textarea>
      </div>
      <div class="flex items-center gap-4">
        <label class="flex items-center gap-2 text-sm">
          <input x-model="form.featured" type="checkbox" class="rounded" />
          <span>Featured</span>
        </label>
        <select x-model="form.stock_status" class="border border-gray-200 px-3 py-2 text-sm rounded">
          <option value="in_stock">In Stock</option>
          <option value="out_of_stock">Out of Stock</option>
        </select>
      </div>
    </div>
    <div class="flex gap-3 mt-6">
      <button @click="save()" :disabled="saving" class="bg-black text-white px-6 py-2 text-xs font-bold uppercase tracking-widest hover:bg-gray-800 rounded disabled:opacity-50 cursor-pointer">Save</button>
      <button @click="document.getElementById('add-form').classList.add('hidden')" class="bg-gray-100 text-gray-600 px-6 py-2 text-xs font-bold uppercase tracking-widest hover:bg-gray-200 rounded cursor-pointer">Cancel</button>
    </div>
  </div>

  <!-- Products Table -->
  <div class="bg-white rounded-lg border border-gray-100 overflow-hidden">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-100">
          <th class="text-left p-4 text-xs font-bold uppercase tracking-wider text-gray-400">Product</th>
          <th class="text-left p-4 text-xs font-bold uppercase tracking-wider text-gray-400 hidden md:table-cell">Category</th>
          <th class="text-left p-4 text-xs font-bold uppercase tracking-wider text-gray-400">Price</th>
          <th class="text-left p-4 text-xs font-bold uppercase tracking-wider text-gray-400 hidden md:table-cell">Status</th>
          <th class="text-right p-4 text-xs font-bold uppercase tracking-wider text-gray-400">Actions</th>
        </tr>
      </thead>
      <tbody>
        {products.map(product => (
          <tr class="border-b border-gray-50 hover:bg-gray-50 transition-colors">
            <td class="p-4">
              <div class="flex items-center gap-3">
                <img src={product.image_url} alt={product.name} class="w-10 h-12 object-cover rounded bg-gray-100" loading="lazy" />
                <div>
                  <p class="text-sm font-medium">{product.name}</p>
                  {product.featured ? <span class="text-[0.5rem] bg-black text-white px-1.5 py-0.5 rounded uppercase font-bold">Featured</span> : null}
                </div>
              </div>
            </td>
            <td class="p-4 text-sm text-gray-500 hidden md:table-cell">{product.category}</td>
            <td class="p-4">
              <div>
                <span class="text-sm font-bold">{formatPrice(product.sale_price ?? product.price)}</span>
                {product.sale_price && <span class="text-xs text-gray-400 line-through ml-2">{formatPrice(product.price)}</span>}
              </div>
            </td>
            <td class="p-4 hidden md:table-cell">
              <span class:list={['text-xs font-medium px-2 py-1 rounded', product.stock_status === 'in_stock' ? 'bg-green-50 text-green-600' : 'bg-red-50 text-red-600']}>
                {product.stock_status === 'in_stock' ? 'In Stock' : 'Out of Stock'}
              </span>
            </td>
            <td class="p-4 text-right">
              <button
                x-data
                @click={`fetch('/api/admin/products?id=${product.id}', { method: 'DELETE' }).then(() => window.location.reload())`}
                class="text-xs text-red-500 hover:text-red-700 font-medium cursor-pointer"
              >
                Delete
              </button>
            </td>
          </tr>
        ))}
        {products.length === 0 && (
          <tr>
            <td colspan="5" class="p-8 text-center text-gray-400 text-sm">No products yet. Add your first product above.</td>
          </tr>
        )}
      </tbody>
    </table>
  </div>
</AdminLayout>
